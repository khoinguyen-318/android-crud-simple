<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageGioiTinh"
        android:layout_width="127dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/male"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/showHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Họ tên"
        app:layout_constraintStart_toEndOf="@id/imageGioiTinh"
        tools:layout_editor_absoluteY="24dp" />

    <TextView
        android:id="@+id/showGioiTinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Gioi tinh"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imageGioiTinh"
        app:layout_constraintTop_toBottomOf="@id/showHoTen" />

    <TextView
        android:id="@+id/showDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Diem"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imageGioiTinh"
        app:layout_constraintTop_toBottomOf="@id/showGioiTinh" />
</androidx.constraintlayout.widget.ConstraintLayout>